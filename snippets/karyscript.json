{
	"simple if": {
		"prefix": "if",
		"body": [
			"if ${1:condition}:",
			"   $0",
            "end"
		],
		"description": "Simple if"
	},
    "simple unless": {
		"prefix": "unless",
		"body": [
			"unless ${1:condition}:",
			"   $0",
            "end"
		],
		"description": "Simple unless"
	},
	"def": {
		"prefix": "def",
		"body": [
			"def ${1:name}:",
			"   $0",
            "end"
		],
		"description": "Async Function Definition"
	},
	"async": {
		"prefix": "async",
		"body": [
			"async ${1:name}:",
			"   $0",
            "end"
		],
		"description": "Async Function Definition"
	},
	"todo": {
		"prefix": "do",
		"body": [
			"do",
			"   $0",
            "end"
		],
		"description": "Anonymous Function"
	},
	"do": {
		"prefix": "todo",
		"body": [
			"to ${1:params} do",
			"   $0",
            "end"
		],
		"description": "Anonymous Function with Arguments"
	},
	"object": {
