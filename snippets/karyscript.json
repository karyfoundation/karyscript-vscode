	"switch": {
		"prefix": "switch",
		"body": [
			"switch ${1:on}:",
			"\tdefault",
			"\t\t$0",
            "end"
		],
		"description": "Switch"
	},
	"case": {
		"prefix": "case",
		"body": [
			"case ${1:expression}:",
